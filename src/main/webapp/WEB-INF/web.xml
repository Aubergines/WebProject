<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="true">

    <display-name></display-name>
    <servlet>
        <description>This is the description of my J2EE component</description>
        <display-name>This is the display name of my J2EE component</display-name>
        <servlet-name>getAuthAction</servlet-name>
        <servlet-class>com.cn.aubergine.auth.GetAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <description>This is the description of my J2EE component</description>
        <display-name>This is the display name of my J2EE component</display-name>
        <servlet-name>getUserAction</servlet-name>
        <servlet-class>com.cn.aubergine.auth.GetUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAuthAction</servlet-name>
        <url-pattern>/getAuth/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getUserAction</servlet-name>
        <url-pattern>/getUser/test</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
